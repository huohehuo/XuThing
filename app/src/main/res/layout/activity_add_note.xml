<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fangzuo.assist.UI.Activity.AddNoteActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingTop="25dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_user"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:text="添加"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="12dp"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/iv_add"
                        android:background="@mipmap/send"
                        android:layout_marginRight="8dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_margin="4dp"
                android:padding="4dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="4dp"
                    tools:background="@drawable/happy"
                    android:id="@+id/iv_mood"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <EditText
                    android:id="@+id/ed_name"
                    android:selectAllOnFocus="true"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_edittext_selector"
                    android:gravity="center_vertical"
                    android:hint="标题"
                    android:paddingLeft="4dp"
                    android:imeOptions="actionNone"
                    android:paddingTop="2dp"
                    />
            </LinearLayout>

            <include layout="@layout/line_heng"/>
            <EditText
                android:id="@+id/ed_detail"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/bg_edittext_selector"
                android:gravity="left"
                android:hint="内容"
                android:padding="4dp"
                android:imeOptions="actionNone"
                />
            <TextView
                android:id="@+id/tv_time"
                tools:text="事件2019"
                android:gravity="right|center_vertical"
                android:textSize="15sp"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="35dp" />
            <include layout="@layout/line_heng"/>
            <com.jude.easyrecyclerview.EasyRecyclerView
                android:id="@+id/ry_icon_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                app:recyclerClipToPadding="true"
                app:recyclerPaddingTop="8dp"
                app:layout_empty="@layout/item_nothing"
                app:scrollbarStyle="insideOverlay"
                app:scrollbars="none" />
            <include layout="@layout/line_heng"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_pic"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <Button
                android:visibility="gone"
                android:id="@+id/btn_choose"
                android:text="选择图片"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>



</LinearLayout>
